<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearComidaActivity">

    <TextView
            android:text="Crear Comida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="52dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_nombrePlato"
            android:hint="Nombre Plato"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2_descripcionPlato"
            android:hint="Descripcion Plato"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/editText_nombrePlato" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_nombrePlato"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText3_nacionalidadPlato"
            android:hint="Nacionalidad"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/editText2_descripcionPlato" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2_descripcionPlato"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editText4_numeroPersonas"
            android:hint="Numero de Personas"
            android:textAlignment="center" android:inputType="number"
            app:layout_constraintStart_toStartOf="@+id/editText3_nacionalidadPlato"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/editText3_nacionalidadPlato"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/button_cancelarComida"
            android:layout_marginTop="148dp" app:layout_constraintTop_toBottomOf="@+id/editText4_numeroPersonas"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button2_guardar" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.369" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2_guardar"
            android:layout_marginTop="116dp"
            app:layout_constraintTop_toBottomOf="@+id/editText4_numeroPersonas"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="56dp"
            app:layout_constraintVertical_bias="0.139"/>
    <CheckBox
            android:text="Picante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_picante"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editText4_numeroPersonas"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>